<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>FindAllServlet</servlet-name>
        <servlet-class>web.servlet.FindAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>web.servlet.AddProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductByIdServlet</servlet-name>
        <servlet-class>web.servlet.GetProductByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>web.servlet.EditProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductByIdServlet</servlet-name>
        <servlet-class>web.servlet.DeleteProductByIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelCheckedProductServlet</servlet-name>
        <servlet-class>web.servlet.DelCheckedProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindProductByConditionServlet</servlet-name>
        <servlet-class>web.servlet.FindProductByConditionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProductByPageServlet</servlet-name>
        <servlet-class>web.servlet.ShowProductByPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindAllServlet</servlet-name>
        <url-pattern>/findAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductByIdServlet</servlet-name>
        <url-pattern>/getProductById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/editProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProductByIdServlet</servlet-name>
        <url-pattern>/deleteProductById</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelCheckedProductServlet</servlet-name>
        <url-pattern>/delCheckedProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindProductByConditionServlet</servlet-name>
        <url-pattern>/findProductByCondition</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProductByPageServlet</servlet-name>
        <url-pattern>/showProductByPage</url-pattern>
    </servlet-mapping>
</web-app>